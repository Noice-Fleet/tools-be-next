{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["**/*.ts', '!**/node_modules/**"],
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "coverageReporters": ["text", "lcov", "json", "clover"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true
}
