{
  "name": "tools-be-next",
  "version": "0.0.1",
  "description": "the brain for noice driver management tools",
  "repository": "git@github.com:Noice-Fleet/tools-be-next.git",
  "author": "@sadrobot <shawnjsx@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clear": "rimraf dist",
    "build": "yarn clear && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy": "node_modules/.bin/pm2-runtime dist/main.js",
    "watch": "NODE_ENV=development nest start --watch",
    "commit": "npx git-cz",
    "push": "git push --follow-tags origin master",
    "release:major": "standard-version --release-as major && yarn push",
    "release:minor": "standard-version --release-as minor && yarn push",
    "release:patch": "standard-version --release-as patch && yarn push",
    "document": "npx compodoc -p tsconfig.json -s",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "codecov": "node_modules/.bin/codecov -t 9218c3e1-820e-49ba-987d-da3e0199d4dc"
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/graphql": "^7.1.5",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "@sendgrid/mail": "^7.0.0",
    "apollo-server-express": "^2.11.0",
    "bcrypt": "^4.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.14.0",
    "dotenv": "^8.2.0",
    "graphql": "14.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.7",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "role-acl": "^4.4.0",
    "rxjs": "^6.5.4",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.24",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-nestjs": "^1.2.3",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "standard-version": "^7.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4",
    "wait-on": "^4.0.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js,scss,css}": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  }
}
